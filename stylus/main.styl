// ----------------- Varriables ------------------//
field-size = 100px
table-size = ( 3 * field-size + 10px)



// ----------------- Colors ---------------------//
red1 = #d32f2f 
red2 = #e53935 
red3 = #e57373 


//----------------- Global Styles ---------------//

body
	background-color red1

*
	font-family: 'Exo', sans-serif;
	
#wrapper
	width 900px
	max-width 90%
	margin 0 auto
	position relative
	

//----------------- Table Styles ---------------//
#choose-player-box
	display none
	position absolute
	top -100px
	left 50%
	transform translateX(-50%)
	background-color #fff
	width table-size
	padding-top .9rem
	text-align center
	color gray
	div
		display flex
		justify-content space-around
		button
			border none
			padding .4rem 0.9rem
			font-size 1.5rem
			background none
			cursor pointer
			transition-duration .3s
			width 50%
			&:hover
				background-color rgba(red1, .8)
				color #fff
.show-choose-player-box
	display block !important
	animation-name show-choose-player-box
	animation-duration .5s
	animation-fill-mode forwards
	
@keyframes show-choose-player-box {
	0% { } 
	100%{
		transform translateX(-50%) translateY(100%)
	}
}
	
.hide-choose-player-box
	animation-name hide-choose-player-box
	animation-duration .5s
	animation-fill-mode forwards

@keyframes hide-choose-player-box {
	0% { } 
	100%{
		transform translateX(-50%) translateY(-100%)
		opacity 0.1
	}
}
	
//----------------- Table Styles ---------------//
.table 
	transform translateY(50%)
	padding 2px
	width table-size
	margin 0 auto
	display flex
	flex-direction column
	flex-wrap wrap
	.table-row
		display flex
		justify-content center
		flex-direction row
		box-sizing border-box	
		.table-field
			font-size 1.8rem
			cursor pointer
			box-sizing border-box
			position relative
			text-align center
			min-width field-size
			min-height field-size
			background red3
			display inline-block
			padding-top 30px
			margin 2px
